---
import "../styles/global.css";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>
            {
                title
                    ? `${title} | Stratagem Exam`
                    : "Stratagem Exam - Super Earth Training Protocol"
            }
        </title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="h-full bg-terminal-dark text-terminal-green font-mono overflow-x-hidden"
    >
        <!-- Terminal scan lines effect -->
        <div class="fixed inset-0 pointer-events-none z-50 opacity-10">
            <div
                class="absolute inset-0 bg-gradient-to-b from-transparent via-terminal-green to-transparent h-1 animate-scan-line"
            >
            </div>
        </div>

        <!-- CRT screen curvature effect -->
        <div
            class="fixed inset-0 pointer-events-none z-40 opacity-20 bg-gradient-radial from-transparent via-transparent to-terminal-dark"
        >
        </div>

        <!-- Main content container -->
        <div class="relative z-10 min-h-full flex flex-col">
            <!-- Terminal header -->
            <header
                class="border-b border-terminal-border bg-terminal-gray/50 backdrop-blur-sm"
            >
                <div class="container mx-auto px-4 py-3">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2">
                            <span class="text-terminal-amber font-bold"
                                >SUPER EARTH</span
                            >
                            <span class="text-terminal-green">TERMINAL</span>
                            <span
                                class="w-2 h-4 bg-terminal-green animate-terminal-blink"
                            ></span>
                        </div>
                        <div
                            class="hidden sm:flex items-center space-x-4 text-sm"
                        >
                            <span class="text-terminal-amber">STATUS:</span>
                            <span class="text-terminal-green">ACTIVE</span>
                            <span class="text-terminal-amber">CLEARANCE:</span>
                            <span class="text-terminal-green">HELLDIVER</span>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main content area -->
            <main class="flex-1 container mx-auto px-4 py-8">
                <slot />
            </main>

            <!-- Terminal footer -->
            <footer
                class="border-t border-terminal-border bg-terminal-gray/50 backdrop-blur-sm"
            >
                <div class="container mx-auto px-4 py-3">
                    <div
                        class="flex flex-col sm:flex-row items-center justify-between text-xs text-terminal-green/70"
                    >
                        <div>
                            <span class="text-terminal-amber">DEMOCRATIC</span> TRAINING
                            PROTOCOL v2.1.4
                        </div>
                        <div class="mt-2 sm:mt-0">
                            FOR SUPER EARTH â€¢ FOR DEMOCRACY
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </body>
</html>

<style>
    html {
        font-family:
            "JetBrains Mono", "Fira Code", "Consolas", "Monaco", monospace;
    }

    body {
        background-color: #0a0a0a;
        background-image:
            radial-gradient(
                circle at 25% 25%,
                rgba(0, 255, 136, 0.08) 0%,
                transparent 40%
            ),
            radial-gradient(
                circle at 75% 75%,
                rgba(255, 221, 68, 0.08) 0%,
                transparent 40%
            ),
            linear-gradient(
                0deg,
                rgba(0, 0, 0, 0.8) 0%,
                rgba(5, 10, 5, 0.9) 50%,
                rgba(0, 0, 0, 0.8) 100%
            );
        background-attachment: fixed;
    }

    /* Custom scanline effect */
    @keyframes scanline {
        0% {
            transform: translateY(-100%);
        }
        100% {
            transform: translateY(100vh);
        }
    }

    /* Terminal glow effect */
    .text-terminal-green {
        color: rgba(0, 255, 136, 1);
        text-shadow:
            0 0 8px rgba(0, 255, 136, 0.7),
            0 0 15px rgba(0, 255, 136, 0.3);
    }

    .text-terminal-amber {
        color: rgba(255, 221, 68, 1);
        text-shadow:
            0 0 8px rgba(255, 221, 68, 0.7),
            0 0 15px rgba(255, 221, 68, 0.3);
    }
</style>
